# Database Configuration
DB_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/smartpresence

# Redis Configuration (optional)
REDIS_URL=redis://redis:6379/0

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Facial Recognition
FACIAL_CONFIDENCE_THRESHOLD=0.6
INSIGHTFACE_MODEL=buffalo_l

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Upload Directory
UPLOAD_DIR=/app/uploads

# Optional: Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAIL_FROM=noreply@smartpresence.com

# Optional: SMS Configuration (Twilio)
# TWILIO_ACCOUNT_SID=your-account-sid
# TWILIO_AUTH_TOKEN=your-auth-token
# TWILIO_PHONE_NUMBER=+1234567890
